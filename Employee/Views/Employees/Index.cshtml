@model IEnumerable<Employee.Models.Employees>

@{
    ViewData["Title"] = "Index";
}
<script src='https://kit.fontawesome.com/a076d05399.js'></script></script>


<h2>Employee Register</h2>

<p>
 

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th><a asp-action="Create"><i class='far fa-plus-square'></i>Employee</i></a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class='fas fa-marker'></i></a> 
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId"><i class='fas fa-trash-alt' style='color:red'></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
